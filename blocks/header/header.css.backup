/* stylelint-disable selector-class-pattern, no-descending-specificity */
/*
 * Header Block - Matching Columbia Gas SiteHeader Structure
 * - Dual desktop/mobile header structure
 * - White background with proper positioning
 * - Logo on left, navigation sections
 * - Responsive design with mobile toggle
 * - Uses original Columbia Gas class names for exact structure matching
 */

/* Base SiteHeader styling */
header .SiteHeader {
  top: 46px;
  padding-bottom: 1px;
  background: #fff;
  position: fixed;
  width: 100%;
  z-index: var(--z-index-nav, 1000);
  box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
}

/* Desktop Header */
header .SiteHeader--desktop {
  display: block;
}

@media (width <= 882px) {
  header .SiteHeader--desktop {
    display: none;
  }
}

header .SiteHeader--desktop .container {
  max-width: var(--grid-max-width, 1200px);
  margin: 0 auto;
  padding: 0 var(--grid-margin, 24px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 80px;
}

/* Mobile Header */
header .SiteHeader--mobile {
  display: none;
}

@media (width <= 882px) {
  header .SiteHeader--mobile {
    display: block;
  }
}

header .SiteHeader__mobile-always-visible {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px var(--grid-margin, 24px);
  background: #fff;
  min-height: 70px;
}

header .SiteHeader__mobile-always-visible .flex {
  display: flex;
  align-items: center;
  gap: 20px;
}

/* Logo styling for both desktop and mobile */
header .logo {
  flex-shrink: 0;
}

header .logo img {
  height: 40px;
  width: auto;
}

/* Main Navigation - Desktop */
header .MainNav--desktop {
  display: flex;
  align-items: center;
  gap: 40px;
}

header .MainNav__auxiliary {
  display: flex;
}

header .MainNav__auxiliary ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 30px;
  align-items: center;
}

header .MainNav__main {
  display: flex;
}

header .MainNav__main ul {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 30px;
  align-items: center;
}

header nav a:any-link {
  color: var(--text-link-header-default, #333);
  text-decoration: none;
  border: 0;
  font-family: var(--body-font-family);
  font-size: var(--font-size-nav-l, 16px);
  font-weight: var(--font-weight-body, 400);
}

header nav a:hover {
  color: var(--text-link-header-hover, #06c);
  border: 0;
}

/* Mobile Search and Menu Toggle */
header .SearchModalMobileTrigger,
header .SearchModalDesktopTrigger {
  cursor: pointer;
  padding: 8px;
  background: none;
  border: none;
}

header .SearchModalMobileTrigger .search-icon,
header .SearchModalDesktopTrigger .search-icon {
  width: 18px;
  height: 18px;
}

header .toggle-navigation {
  cursor: pointer;
  padding: var(--spacing-xs);
  background: none;
  border: none;
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

header .toggle-navigation .icon {
  width: 24px;
  height: 24px;
}

header .toggle-navigation .icon-close-menu,
header .toggle-navigation .icon.icon-close-menu {
  display: none;
}

header .SiteHeader--mobile.is-open .toggle-navigation .icon-open-menu,
header .SiteHeader--mobile.is-open .toggle-navigation .icon.icon-open-menu {
  display: none;
}

header .SiteHeader--mobile.is-open .toggle-navigation .icon-close-menu,
header .SiteHeader--mobile.is-open .toggle-navigation .icon.icon-close-menu {
  display: block;
}

header .toggle-navigation span {
  display: none;
}

/* Mobile Navigation */
header .MobileNav {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  display: none;
  box-shadow: 0 4px 8px rgb(0 0 0 / 10%);
  z-index: 999;
}

header .SiteHeader--mobile.is-open .MobileNav {
  display: block;
}

header .MobileNav__main ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

header .MobileNav__main li {
  border-bottom: 1px solid #eee;
}

header .MobileNav__main a {
  display: block;
  padding: 15px var(--grid-margin, 24px);
  color: #333;
  text-decoration: none;
  font-family: var(--body-font-family);
  font-size: 16px;
}

header .MobileNav__main a:hover {
  background-color: #f5f5f5;
}

/* Emergency Contact and Special Items */
header .menu-item {
  position: relative;
}

header .menu-item a {
  display: flex;
  align-items: center;
  gap: 8px;
}

header .icon-warning-2 {
  width: 16px;
  height: 16px;
  fill: #d9534f;
}

/* Search Modal Styling */
header .SearchModal {
  position: fixed;
  inset: 0;
  background: rgb(0 0 0 / 80%);
  z-index: 9999;
  display: none;
  align-items: center;
  justify-content: center;
}

header .SearchModal.is-open {
  display: flex;
}

header .SearchModal .form-field {
  background: white;
  padding: 40px;
  border-radius: 8px;
  width: 100%;
  max-width: 600px;
}

header .SearchModal input {
  width: 80%;
  padding: 12px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

header .SearchModal button {
  width: 18%;
  padding: 12px;
  background: #06c;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  margin-left: 2%;
}

/* Scrolled state styling */
body[ui-scrolled="true"] header .SiteHeader--desktop,
body[ui-scrolled="true"] header .SiteHeader--mobile .SiteHeader__mobile-always-visible {
  box-shadow: 0 4px 4px 0 rgb(0 0 0 / 10%);
}

body[ui-scrolled="true"] header .SiteHeader--desktop,
body[ui-scrolled="true"] header .SiteHeader--mobile,
body[ui-scrolled="true"] header .SiteHeader--mobile .SiteHeader__mobile-always-visible {
  top: 0;
}

/* Responsive adjustments */
@media (width >= 883px) {
  header .SiteHeader + main,
  header .SiteHeader + .sf_cols > main {
    padding-top: 142px;
  }
}

@media (width <= 882px) {
  header .SiteHeader + main,
  header .SiteHeader + .sf_cols > main {
    padding-top: 146px;
  }
}
