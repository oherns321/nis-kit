{
  "definitions": [
    {
      "title": "Feature Cards",
      "id": "feature-cards",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Feature Cards",
              "filter": "feature-cards",
              "model": "feature-cards"
            }
          }
        }
      }
    },
    {
      "title": "Feature Card",
      "id": "feature-card",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Feature Card",
              "model": "feature-card"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "feature-cards",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "heading",
          "label": "Container Heading",
          "description": "Main heading displayed above the feature cards",
          "required": false,
          "maxLength": 200
        },
        {
          "component": "select",
          "name": "variant",
          "label": "Layout Variant",
          "description": "Choose the layout style for the feature cards",
          "options": [
            {
              "name": "Default (3 columns)",
              "value": ""
            },
            {
              "name": "Two Columns",
              "value": "two-columns"
            },
            {
              "name": "Four Columns",
              "value": "four-columns"
            }
          ]
        },
        {
          "component": "multiselect",
          "name": "style",
          "label": "Style Options",
          "description": "Additional styling options",
          "options": [
            {
              "name": "Compact Spacing",
              "value": "compact"
            },
            {
              "name": "Centered Alignment",
              "value": "centered"
            },
            {
              "name": "Dark Theme",
              "value": "dark"
            },
            {
              "name": "Light Theme",
              "value": "light"
            }
          ]
        }
      ]
    },
    {
      "id": "feature-card",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Feature Image",
          "description": "Main image representing the feature",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "featureHeading",
          "label": "Feature Heading",
          "description": "Heading for the individual feature card",
          "required": true,
          "maxLength": 100
        },
        {
          "component": "richtext",
          "valueType": "string",
          "name": "featureDescription",
          "label": "Feature Description",
          "description": "Detailed description of the feature",
          "required": true,
          "maxLength": 500
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "cta",
          "label": "CTA URL",
          "description": "URL for the call-to-action button",
          "required": false
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "ctaText",
          "label": "CTA Button Text",
          "description": "Display text for the CTA button",
          "required": false,
          "maxLength": 50
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "feature-cards",
      "components": [
        "feature-card"
      ]
    }
  ]
}